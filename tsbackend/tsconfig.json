{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             // 关键修改：使用 CommonJS
    "moduleResolution": "node",       // 关键修改：匹配 node 解析策略
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
